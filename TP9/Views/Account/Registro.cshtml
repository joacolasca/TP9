<link rel="stylesheet" href="/css/Index.css">

<form action='@Url.Action("IngresarRegistro")' method="get" onsubmit="return CumpleCondiciones()" style= "display: flex;justify-content: center; padding-top: 15px; flex-direction: column;">
    <h1 style="margin-bottom: 10px;">Iniciar sesion</h1>

    <div class="formulario">
        <label class="form-label">Nombre de usuario</label>
        <input type="text" class="form-control" id="UserName" name="UserName" required style="margin-top:10px">
    </div>
     
    <div class="formulario">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="Contraseña" name="Contraseña" required style="margin-top:10px">
    </div>

    <div class="formulario">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="Contraseña2" name="Contraseña" required style="margin-top:10px">
    </div>
    <p id = error style="color:red;"> </p>
    <div class="formulario">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required style="margin-top:10px">
    </div>

    <div class="formulario">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" id="Email" name="Email" required style="margin-top:10px">
    </div>

    <div class="formulario">
        <label class="form-label">Telefono</label>
        <input type="number" class="form-control" id="Telefono" name="Telefono" required style="margin-top:10px">
    </div>
    
    <div style="width: 100%; display: flex; justify-content: center;">
        <input type="submit" value="Enviar" style="background-color: lightblue; color: black; padding: 10px 20px; font-size: 16px; border: none; border-radius: 4px; cursor: pointer;">
    </div>
</form>


<script src="~/js/registro.js" asp-append-version="true"></script>